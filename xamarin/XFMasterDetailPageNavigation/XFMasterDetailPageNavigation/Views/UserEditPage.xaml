<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFMasterDetailPageNavigation.UserEditPage"
             NavigationPage.HasBackButton="False"
             Title="Setting">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="Username: " VerticalOptions="Center"/>
                <Entry x:Name="username"  HorizontalOptions="FillAndExpand" Placeholder="username"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Password: " VerticalOptions="Center"/>
                <Entry x:Name="password"  HorizontalOptions="FillAndExpand" Placeholder="password"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Forename: " VerticalOptions="Center"/>
                <Entry x:Name="forename" HorizontalOptions="FillAndExpand" Placeholder="forename"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Surname: " VerticalOptions="Center"/>
                <Entry x:Name="surname" HorizontalOptions="FillAndExpand" Placeholder="surname"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Email: " VerticalOptions="Center"/>
                <Entry x:Name="email" HorizontalOptions="FillAndExpand" Placeholder="email"/>
            </StackLayout>
            <Picker x:Name="MainPicker" Title="Role" SelectedIndexChanged="MainPicker_SelectedIndexChanged"/>
            <Button x:Name="saveButton" Text="SAVE" Clicked="onSave"/>
            <Button x:Name="backButton" Text="BACK" Clicked="onBack"/>
            <Button x:Name="deleteButton" Text="DELETE" Clicked="onDelete"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


